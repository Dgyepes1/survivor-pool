{% extends "layout.jinja2" %}
{% block body %}
    <h1>NFL 2016 pool</h1>
    <div class='row'>
        <div class='col-md-6'>
            <h2>Surviving</h2>
            {% for user in users %}
                {% if user.isalive %}
                    {% if request.authenticated_userid == user.username %}
                        <p><b>{{ user.username }}</b></p>
                    {% else %}
                        <p>{{ user.username }}</p>
                    {% endif %}
                    <p>Week {{ week }} selection:  X</p>
                {% endif %}
            {% endfor %}
        </div>
        <div class='col-md-6'>
            <h2>Eliminated</h2>
            {% for user in users %}
                {% if not user.isalive %}
                    {% if request.authenticated_userid == user.username %}
                        <p><b>{{ user.username }}</b></p>
                    {% else %}
                        <p>{{ user.username }}</p>
                    {% endif %}
                    <p>Eliminated by selecting team X week #.</p>
                {% endif %}
            {% endfor %}
        </div>
    </div>
{% endblock %}



