{% extends "layout.jinja2" %}
{% block body %}

<nav aria-label="Page navigation">
  <ul class="pagination">
    <li {% if week == 1 %}class="disabled"{% endif %}>
      <a href="{{ request.route_url('pick', week_num=(week|int - 1)) }}" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>

    {% for n in range(17) %}
        <li><a href="{{ request.route_url('pick', week_num=n+1) }}">{{ n+1 }}</a></li>
    {% endfor %}
    <li {% if week == 17 %}class="disabled"{% endif %}>
      <a href="{{ request.route_url('pick', week_num=(week|int + 1)) }}" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>

    <form class="pick-group" action="" method="POST">
        <ul id="games_list">
            <h2>Week {{ week }}</h2>
            {% for game in games %}
                <li>{{ game.home }} <input type="radio" name="game" value="home {{ game.id }} {{ week }}"> @ {{ game.away }} <input type="radio" name="game" value="away {{ game.id }} {{ week }}"></li>
                <li>{{ game.datetime.strftime('%A %B %d, %Y %I:%M %p').lstrip("0").replace(" 0", " ")}}</li>
                <br>
            {% endfor %}
            <button class="btn btn-default" type="submit" name="Save pick"/>Save pick <i class="fa fa-lg fa-floppy-o"></i> </button>
        </ul>
    </form>
    
{% endblock %}